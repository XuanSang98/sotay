<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reFragmentTip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/txtTips"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/huong_dan"
        android:textColor="#000"
        android:textAllCaps="true"
        android:textSize="@dimen/text_header" />

    <TextView
        android:id="@+id/txtbt123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTips"
        android:text="@string/bai_tap_123"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txtbt123"
        android:layout_marginTop="3dp"
        android:background="#696969">

    </View>

    <ListView
        android:id="@+id/lstTips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:dividerHeight="6dp"
        android:paddingTop="10dp" />

</RelativeLayout>