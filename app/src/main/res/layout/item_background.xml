<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@drawable/shape_image_gridview"
        />
    <ImageButton
        android:visibility="gone"
        android:id="@+id/btnChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBackground"
        android:layout_alignRight="@+id/imgBackground"
        android:layout_alignEnd="@+id/imgBackground"
        android:src="@drawable/icon_check_selected"
        android:background="@android:color/transparent"
        android:padding="5dp"/>

</RelativeLayout>